    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch (tests)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/trtp_test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch (receiver)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/trtp_receiver",
            "args": [ "::", "5555", "-o", "./bin/out_%d.txt", "-n", "4" ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}